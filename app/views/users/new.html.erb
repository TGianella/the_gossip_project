<% flash.each do |type, msg| %>
  <div class="alert alert-danger text-center" role="alert">
    <%= msg %>
  </div>
<% end %>
<h1> Créer un compte </h1>

<%= form_with model: @user do |form|%>
  <div class="mb-3">
    <%= form.label :prénom %><br>
    <%= form.text_field :first_name %>
    <% @user.errors.full_messages_for(:first_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :nom %><br>
    <%= form.text_field :last_name %>
    <% @user.errors.full_messages_for(:last_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @user.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :ville %><br>
    <%= form.collection_select :city_id, City.order(:name), :id, :name %>
    <% @user.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :age %><br>
    <%= form.text_field :age %>
    <% @user.errors.full_messages_for(:age).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :email %><br>
    <%= form.text_field :email %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :mot_de_passe %><br>
    <%= form.password_field :password %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :confirmation_mot_de_passe %><br>
    <%= form.password_field :password_confirmation %>
    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label 'Se souvenir de moi' %>
    <%= form.check_box :remember_user %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

