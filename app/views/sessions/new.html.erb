<h1>Se connecter</h1>
<div class="w-50">
  <%= form_with url: sessions_path, scope: :session, local: true do |form| %>

    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>

    <%= form.label 'Mot de passe' %>
    <%= form.password_field :password, class: 'form-control' %>

    <div class="mt-1">
      <%= form.label 'Se souvenir de moi' %>
      <%= form.check_box :remember %>
    </div>

    <div class="mt-1">
      <%= form.submit "Se connecter", class: "btn btn-primary" %>
      <%= link_to "CrÃ©er un compte", new_user_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

