<h1>Se connecter</h1>
<%= form_with url: sessions_path, scope: :session, local: true do |form| %>

  <%= form.label :email %>
  <%= form.email_field :email, class: 'form-control' %>

  <%= form.label :password %>
  <%= form.password_field :password, class: 'form-control' %>

  <div>
    <%= form.label 'Se souvenir de moi' %>
    <%= form.check_box :remember %>
  </div>

  <%= form.submit "Log in", class: "mt-2 btn btn-primary" %>
<% end %>

